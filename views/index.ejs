<!doctype html>
<html lang="fr">

<head>
    <title>Catalogue - Villas Neptune</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
        crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body class="bg-taupe">

    <header>
        <% include partials/navbar %>
    </header>


    <main>
        <div class="container">
            <div class="m-3">
                <h1 class="text-center m-5">Nos modèles</h1>
            </div>

            <div class="row justify-content-center">

                <% villa.forEach(function(element) {%>
                    <div class="card col-3 m-4 p-0" style="width: 18rem;">
                        <img class="card-img-top" src="<%=element.photo_pers%>" alt="Card image cap">
                        
                        <div class="card-body">
                            
                            <h5 class="card-title">
                                <%=element.nom_modele%>
                            </h5>
                            <p class="card-text">
                                <%=element.descriptif%>
                            </p>
                            <p class="card-text">
                                <small class="text-muted"> Prix : 
                                    <% if (element.prix == undefined) { %>
                                        N.C.
                                    <% } else { %>
                                    <%=element.prix%>
                                    <% } %>
                                    
                                </small>
                                <p>F<%=element.nb_pieces%></p>
                            </p>
                            <div class="text-center">
                            <button type="button" class="btn bg-gris text-light" data-toggle="modal" data-target="#<%=element.nom_modele%>">
                                Voir détails
                            </button></div>
                        </div>


                        <!-- Modal -->
                        <div class="modal" id="<%=element.nom_modele%>">
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content">

                                    <!-- Modal Header -->
                                    <div class="modal-header">
                                        <h4 class="modal-title">
                                            <%=element.nom_modele%>
                                        </h4>
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    </div>

                                    <!-- Modal body -->
                                    <div class="modal-body">

                                        <!-- Carousel -->

                                        <!-- <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                                                <div class="carousel-inner">
                                                  <div class="carousel-item active">
                                                    <img class="d-block w-100" src="<%=element.photo_pers%>" alt="First slide">
                                                  </div>
                                                  <div class="carousel-item">
                                                    <img class="d-block w-100" src="<%=element.photo_rdc%>" alt="Second slide">
                                                  </div>
                                                  <% if (element.photo_etage) { %>
                                                  <div class="carousel-item">
                                                    <img class="d-block w-100" src="<%=element.photo_etage%>" alt="Third slide">
                                                  </div>
                                                  <% }; %>
                                                </div>
                                                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                                  <span class="sr-only">Previous</span>
                                                </a>
                                                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                                  <span class="sr-only">Next</span>
                                                </a>
                                              </div> -->
                                            <img class = "w-100" src="<%=element.photo_pers%>">
                                            <img class = "w-100" src="<%=element.photo_rdc%>">
                                            <img class = "w-100" src="<%=element.photo_etage%>">

                                        <!-- Liste text -->
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item">
                                                <%=element.nb_pieces%> pièces <% if (element.suite_parentale) { %> dont une suite parentale avec salle de bain <% }; %></li>
                                            
                                            <li class="list-group-item">shob :
                                                <%=element.shob%>
                                            </li>
                                            <li class="list-group-item">Grand séjour <% if (element.surface_sejour != undefined) { %> de <%=element.surface_sejour%> m² <% } %></li>
                                        </ul>
                                    </div>

                                    <!-- Modal footer -->
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-danger" data-dismiss="modal">Fermer</button>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                    <% }); %>




            </div>
        </div>
    </main>



    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
</body>

</html>